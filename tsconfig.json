{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}
